<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Journal Entries

    <a data-toggle="collapse" href="#user_journal_entries_new_form">
      Add journal entry
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.journal_entries.each do |journal_entry| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to journal_entry, journal_entry %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_journal_entries_new_form">
        <%= render partial: "users/user_journal_entries_new_form" %>
      </div>
    </div>

  </ul>
</div>
