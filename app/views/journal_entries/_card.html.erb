<div class="card mb-3">
  <h2 class="card-header h4">
    Journal Entry #<%= journal_entry.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= journal_entry.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Place</dt>
      <!-- Display place_id start -->
      <dd><%= journal_entry.place_id %></dd>
      <!-- Display place_id end -->

      <dt>Title</dt>
      <!-- Display title start -->
      <dd><%= journal_entry.title %></dd>
      <!-- Display title end -->

      <dt>Date</dt>
      <!-- Display date start -->
      <dd><%= journal_entry.date %></dd>
      <!-- Display date end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= journal_entry.description %></dd>
      <!-- Display description end -->

      <dt>Image</dt>
      <!-- Display image start -->
      <dd>
        <%= cl_image_tag @journal_entry.image, class: "img-fluid" %>
      </dd>
      <!-- Display image end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back journal_entry, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link journal_entry start -->
      <div class="col">
        <% if current_user == @journal_entry.user %>
          <%= link_to edit_journal_entry_url(journal_entry), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link journal_entry end -->

      <!-- Delete link journal_entry start -->
      <div class="col">
        <% if current_user == @journal_entry.user %>
          <%= link_to journal_entry, method: :delete, data: { confirm: "Do you really want to delete this journal_entry?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link journal_entry end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(journal_entry.updated_at) %> ago
  </div>
</div>
